        <item name="colorPrimary">#030303</item> <!-- Dark base -->
        <item name="colorPrimaryVariant">#020202</item> <!-- Slightly lighter dark gray -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White for text on primary -->

        <!-- Secondary colors -->
        <item name="colorSecondary">#74B8CB</item> <!-- Light blue -->
        <item name="colorSecondaryVariant">#5AA7B8</item> <!-- Slightly darker variant of light blue -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- White for text on secondary -->

        <!-- Background and surface -->
